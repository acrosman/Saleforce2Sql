{
  "name": "salesforce2sql",
  "version": "0.8.0",
  "description": "Create a database schema from a Salesforce org.",
  "main": "main.js",
  "scripts": {
    "start": "electron .",
    "lint": "eslint src app --ignore-path .gitignore ",
    "pack": "electron-builder --dir",
    "dist": "electron-builder -wlm",
    "postinstall": "electron-builder install-app-deps",
    "test": "jest --coverage",
    "test-on-commit": "jest",
    "madge": "madge --warning --circular --extensions js ./",
    "prepare": "husky install"
  },
  "jest": {
    "verbose": true
  },
  "build": {
    "appId": "com.electron.acrosman.Salesforce2Sql",
    "productName": "Salesforce2Sql",
    "mac": {
      "category": "public.app-category.utilities"
    },
    "dmg": {
      "contents": [
        {
          "x": 110,
          "y": 150
        },
        {
          "x": 440,
          "y": 150,
          "type": "link",
          "path": "/Applications"
        }
      ],
      "artifactName": "salesforce2sql-${version}.${ext}"
    },
    "win": {
      "target": [
        {
          "target": "nsis",
          "arch": [
            "x64"
          ]
        },
        {
          "target": "portable"
        }
      ]
    },
    "nsis": {
      "runAfterFinish": true,
      "artifactName": "salesforce2sql-${version}.${ext}"
    },
    "portable": {
      "artifactName": "salesforce2sql.exe"
    },
    "linux": {
      "target": "zip"
    }
  },
  "keywords": [
    "Electron",
    "JSForce",
    "Salesforce"
  ],
  "author": "Aaron Crosman <acrosman@gmail.com> (https://spinningcode.org)",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/acrosman/Salesforce2Sql"
  },
  "dependencies": {
    "bootstrap": "^5.1.3",
    "bootstrap-icons": "^1.5.0",
    "bootswatch": "^5.1.3",
    "fs-extra": "^8.1.0",
    "jquery": "^3.5.1",
    "jquery.json-viewer": "^1.4.0",
    "jsforce": "^1.10.1",
    "knex": "^2.4.0",
    "minimist": "^1.2.6",
    "mysql": "^2.18.1",
    "pg": "^8.5.1",
    "sqlite3": "^5.0.9"
  },
  "devDependencies": {
    "@typescript-eslint/eslint-plugin": "^5.14.0",
    "babel-plugin-rewire": "^1.2.0",
    "debug-menu": "^0.6.1",
    "electron": "^21",
    "electron-builder": "^22.11.7",
    "electron-debug": "^2.2.0",
    "electron-reloader": "^1.1.0",
    "eslint": "^8.11.0",
    "eslint-config-airbnb": "^19.0.4",
    "eslint-config-airbnb-base": "^15.0",
    "eslint-plugin-import": "^2.25.4",
    "eslint-plugin-jest": "^26.1.1",
    "eslint-plugin-jsx-a11y": "^6.5.1",
    "eslint-plugin-react": "^7.29.3",
    "eslint-plugin-react-hooks": "^4.3.0",
    "husky": "^8.0.0",
    "jest": "^27.0.6"
  }
}
